        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:layout_height="match_parent"
                android:layout_width="match_parent">

                <com.joanzapata.iconify.widget.IconButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtTransport"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Smart Transport\nSolutions\n\n{fa-bus 30sp #606060}"
                android:onClick="openPopup"
                android:textSize="10sp"
                android:tag="1"
                android:layout_marginRight="1sp"
                android:paddingBottom="10dp"
                android:background="#ffffff"
                android:textColor="#949494"
                android:textStyle="bold"
                android:layout_weight="1" />

                <com.joanzapata.iconify.widget.IconButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtWaste"
                android:gravity="center"
                android:text="Smart Waste\nManagement.\n\n{fa-trash 30sp #606060}"
                android:onClick="openPopup"
                android:textSize="10sp"
                android:paddingTop="10dp"
                android:tag="2"
                android:layout_marginRight="1sp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:textColor="#949494"
                android:textStyle="bold" />
                <com.joanzapata.iconify.widget.IconButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtCitizens"
                android:gravity="center"
                android:text="Citizen Engagement\nInitiatives\n\n{fa-users 27sp #606060}"
                android:onClick="openPopup"
                android:textSize="10sp"
                android:paddingTop="10dp"
                android:tag="3"
                android:layout_marginRight="1sp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:textColor="#949494"
                android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp">

                <com.joanzapata.iconify.widget.IconButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtTown"
                android:gravity="center"
