    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="10dp"
            android:id="@+id/soldWaste"
            android:tag="6">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/catagory1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-trash 25sp } Solid Waste Mgmt."/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/catagoryCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="100"
                android:textStyle="bold"
                android:textColor="#E36C09"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:tag="8"
            android:id="@+id/streetLight">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/catagory2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-lightbulb-o 25sp } Street Light"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/catagoryCount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="1345"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#E36C09"
                android:autoText="false" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:background="@color/white"
            android:tag="10"
            android:id="@+id/drinkWater">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/catagory3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{ic-drinkingwater 25sp } Drinking Water"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/catagoryCount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="111"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#E36C09" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:padding="10dp"
            android:tag="11"
            android:id="@+id/swerage">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/catagory4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{ic-sewage 25sp } Sewage"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/catagoryCount4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="111"
                android:textStyle="bold"
                android:textColor="#E36C09"
                android:textSize="17sp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:padding="10dp"
            android:tag="12"
            android:id="@+id/miscGriev">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/catagory5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-envelope-o 25sp } Misc. Grievance"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/catagoryCount5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="111"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#E36C09" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
