<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.csm.smartcity.dashboard.NewDashboardActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:weightSum="4">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_weight="1" />



    <!--<View-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1" />-->


        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
        <!--android:text="Skip"-->
        <!--android:id="@+id/skip"-->
        <!--android:clickable="true"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="15sp"-->
        <!--android:background="@drawable/text_view_pressed"-->
        <!--android:layout_gravity="right"-->
        <!--android:gravity="center"-->
        <!--android:layout_marginRight="50dp"-->
        <!--android:layout_marginTop="15dp" />-->


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/loginbottn"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:layout_weight="3"
            android:scaleType="fitEnd" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true">


        <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:id="@+id/btnFacebook">

        <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{fa-facebook 25dp}"
        android:layout_gravity="center"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:textSize="15sp" />

        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@android:color/darker_gray"/>-->

        <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Facebook"
        android:id="@+id/fbtxt"
        android:layout_gravity="center"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gmail_button_shape"
        android:layout_marginTop="10dp"
        android:id="@+id/btnGmail">

        <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{fa-envelope-o 25dp}"
        android:id="@+id/gmailIcon"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="15sp" />
        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@android:color/darker_gray"/>-->
        <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Gmail"
        android:id="@+id/gmailtxt"
        android:layout_gravity="center"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mobile_button_shape"
        android:layout_marginTop="10dp"
        android:id="@+id/btnMobile">

        <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{fa-mobile 25dp}"
        android:id="@+id/mobIcon"
        android:layout_gravity="center"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:textSize="15sp" />
        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@android:color/darker_gray"/>-->
        <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Mobile"
        android:id="@+id/mobtxt"
        android:layout_gravity="center"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold"/>

        </LinearLayout>



        </LinearLayout>



    </RelativeLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Skip"
    android:id="@+id/skip"
    android:textColor="@color/black"
    android:layout_gravity="right"
    android:textSize="15sp"
    android:background="@drawable/text_view_pressed"
    android:clickable="true"
    android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout"
    android:layout_marginRight="50dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="10dp" />
</RelativeLayout>
