<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logo" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BHUBANESWAR"
                    android:id="@+id/textView"
                    android:layout_marginTop="10dp"
                    android:textColor="#8E8E8E"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="SMART"
                    android:id="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#89A54E"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CITY"
                    android:id="@+id/textView4"
                    android:layout_marginTop="10dp"
                    android:textColor="#E57713"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THE"
                    android:id="@+id/textView2"
                    android:textColor="#89A54E"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIG"
                    android:id="@+id/textView5"
                    android:layout_marginLeft="5dp"
                    android:textColor="#E57713"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONNECT"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="5dp"
                    android:textColor="#679BDB"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:id="@+id/textView7"
                    android:layout_marginLeft="5dp"
                    android:textColor="#679BDB"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp">

        <com.joanzapata.iconify.widget.IconButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with Facebook"
            android:id="@+id/btnFacebook"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="15dp"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <com.joanzapata.iconify.widget.IconButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with Gmail"
            android:id="@+id/btnGmail"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gmail_button_shape"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/gmail"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <com.joanzapata.iconify.widget.IconButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with Mobile Number"
            android:id="@+id/btnMobile"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mobile_button_shape"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/phone"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>
    <TextView
        android:layout_width="81dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Skip"
        android:id="@+id/skip"
        android:clickable="true"
        android:textColor="#0070C0"
        android:textSize="20sp"
        android:background="@drawable/text_view_pressed"
        android:layout_gravity="top|right"
        android:gravity="center"
        android:layout_marginRight="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />


</LinearLayout>
</ScrollView>
